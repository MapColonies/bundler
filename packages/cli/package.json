{
  "name": "@bundler/cli",
  "version": "1.0.0",
  "description": "bundler cli",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "test:unit": "jest --config=./tests/configurations/unit/jest.config.js",
    "test:integration": "jest --config=./tests/configurations/integration/jest.config.js",
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "prelint:fix": "npm run format:fix",
    "prelint": "npm run format",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "release": "standard-version",
    "test": "npm run test:unit && npm run test:integration",
    "prebuild": "npm run clean",
    "build": "tsc --project tsconfig.build.json && npm run assets:copy",
    "start": "npm run build && cd dist && node ./index.js",
    "assets:copy": "copyfiles -f ./config/* ./dist/config && copyfiles ./package.json dist",
    "clean": "rimraf dist"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MapColonies/bundler.git"
  },
  "author": "MapColonies",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/MapColonies/bundler/issues"
  },
  "homepage": "https://github.com/MapColonies/bundler#readme",
  "dependencies": {
    "@bundler/core": "*",
    "@bundler/github": "*",
    "@map-colonies/js-logger": "^0.0.5",
    "@map-colonies/read-pkg": "0.0.1",
    "chalk": "^4.1.2",
    "cli-spinners": "^2.7.0",
    "columnify": "^1.6.0",
    "config": "^3.3.8",
    "reflect-metadata": "^0.1.13",
    "tsyringe": "^4.7.0",
    "yargs": "^17.6.2"
  },
  "devDependencies": {
    "@map-colonies/eslint-config": "^3.1.3",
    "@map-colonies/prettier-config": "0.0.1",
    "@types/columnify": "^1.5.1",
    "@types/config": "^3.3.0",
    "@types/jest": "^26.0.19",
    "@types/node": "^18.11.18",
    "@types/yargs": "^17.0.18",
    "copyfiles": "^2.4.1",
    "eslint": "^8.30.0",
    "jest": "^26.6.3",
    "jest-create-mock-instance": "^1.1.0",
    "jest-html-reporters": "^2.1.2",
    "prettier": "^2.8.1",
    "pretty-quick": "^3.1.3",
    "standard-version": "^9.3.0",
    "ts-jest": "^26.4.4",
    "ts-node": "^9.1.1",
    "typescript": "4.9.4"
  }
}
